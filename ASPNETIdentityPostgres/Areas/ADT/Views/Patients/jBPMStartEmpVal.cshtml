@model ASPNETIdentityPostgres.Areas.ADT.Models.EmployeeEvalStartProcessData

@{
    ViewData["Title"] = "Start Employee Evaluation";

    var employees = ASPNETIdentityPostgres.Areas.ADT.Models.BPMUsers.Users
        .Select(c => new SelectListItem() { Text = c.Key, Value = c.Value })
    .ToList();

}

<h3>Start Employee Evaluation (jBPM Engine)</h3>

<div>

    <div class="row">
        <div class="col-md-12">
            <form asp-action="jBPMStartEmpVal">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-4">

                        <div class="form-group">
                            <label asp-for="employee" class="control-label">Select Employee</label>

                            <select asp-for="employee" asp-items="@employees" class="form-control">
                                <option value="">Please select one</option>
                            </select>
                            <span asp-validation-for="employee" class="text-danger"></span>
                        </div>


                    </div>

                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <input type="submit" value="Start the Evaluation" class="btn btn-primary" />

                        </div>
                        <div class="form-group">
                            <a asp-action="MyEmpEvals" class="btn btn-danger" title="I do not have jBPM Engine/Platform running on my machine.">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

