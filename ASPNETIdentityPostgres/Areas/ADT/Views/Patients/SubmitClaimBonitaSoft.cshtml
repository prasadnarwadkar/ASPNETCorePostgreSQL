@model ASPNETIdentityPostgres.Areas.ADT.Models.BonitaSoftClaim

@{
    ViewData["Title"] = "Submit Claim to BonitaSoft BPM Engine";
}

<h3>Submit Claim to BonitaSoft BPM Engine</h3>

<div>
    
    <div class="row">
        <div class="col-md-4">
            <form asp-action="SubmitClaimBonitaSoft">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="claimInput.description" class="control-label">Claim Description</label>
                    <input asp-for="claimInput.description" class="form-control" />
                    <span asp-validation-for="claimInput.description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Submit the Claim" class="btn btn-primary" />
                    
                </div>
                <div class="form-group">
                    <a asp-action="MyTaskList" class="btn btn-danger" title="I do not have BonitaSoft Studio (Engine) running on my machine.">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

